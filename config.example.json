{
  "api": {
    "endpoint": null,
    "stream_timeout": 30
  },
  "model": {
    "default_model": "openai/gpt-4o-mini",
    "system_prompt": null
  },
  "session": {
    "verbose": false
  },
  "reasoning": {
    "enabled": false,
    "effort": "low",
    "max_tokens": null,
    "exclude": false
  },
  "mcp": {
    "disable_tools": false,
    "settings": {
      "auto_detect": true,
      "timeout": 30
    },
    "servers": [
      {
        "name": "filesystem",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"],
        "auto_activate_keywords": ["file", "files", "directory", "folder", "read", "write", "create", "delete", "list"],
        "description": "File system operations",
        "enabled": true
      },
      {
        "name": "time",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-time"],
        "auto_activate_keywords": ["time", "clock", "current time", "what time"],
        "description": "Time and date utilities",
        "enabled": true
      },
      {
        "name": "github",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-github"],
        "auto_activate_keywords": ["github", "repository", "repo", "issue", "pull request", "pr", "commit"],
        "description": "GitHub API integration",
        "env": {
          "GITHUB_TOKEN": "${GITHUB_TOKEN}"
        },
        "enabled": false
      },
      {
        "name": "web",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-web"],
        "auto_activate_keywords": ["browse", "website", "webpage", "url", "fetch", "scrape"],
        "description": "Web browsing and scraping",
        "enabled": true
      },
      {
        "name": "postgres",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-postgres"],
        "auto_activate_keywords": ["database", "sql", "postgres", "postgresql", "query", "table"],
        "description": "PostgreSQL database operations",
        "env": {
          "DATABASE_URL": "${DATABASE_URL}"
        },
        "enabled": false
      }
    ],
    "tool_selection": {
      "max_servers": 3,
      "min_match_score": 0.3,
      "prompt_before_activation": false
    }
  }
}